<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg_normal"
    android:orientation="vertical"
    tools:context=".authentication_login_signup.ChangePasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_change_password_tv_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="Change user password"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:orientation="vertical">


                <!--    Email-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_change_password_til_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_margin">

                    <TextView
                        android:id="@+id/activity_change_password_tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--    Old Password-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_change_password_til_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_change_password_til_email"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/item_margin"
                    app:boxBackgroundColor="@color/epi_event_color_signup_box"
                    app:boxStrokeColor="#FFF"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:passwordToggleEnabled="false">

                    <EditText
                        android:id="@+id/activity_change_password_et_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:hint="Current Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>


                <!--    New Password-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_change_password_til_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_change_password_til_old_password"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/item_margin"
                    app:boxBackgroundColor="@color/epi_event_color_signup_box"
                    app:boxStrokeColor="#FFF"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:passwordToggleEnabled="false">

                    <EditText
                        android:id="@+id/activity_change_password_et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--    Re-enter new password-->

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_change_password_til_re_new_re_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_change_password_til_new_password"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="@dimen/item_margin"
                    app:boxBackgroundColor="@color/epi_event_color_signup_box"
                    app:boxStrokeColor="#FFF"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:passwordToggleEnabled="false">

                    <EditText
                        android:id="@+id/activity_change_password_et_new_re_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:alpha="0.6"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--    Login Button-->
                <Button
                    android:id="@+id/activity_change_password_btn_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/activity_change_password_til_re_new_re_password"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="LOGIN" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>